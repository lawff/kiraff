{
  "name": "@kiraff/monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@7.1.7",
  "description": "useless UI.",
  "author": "lawliet",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "check-types": "tsc --noEmit --pretty",
    "lint": "eslint .",
    "clean": "rimraf packages/*/{esm,cjs,lib,dist} packages/**/*.tsbuildinfo",
    "build": "npm run clean && esno scripts/build",
    "build:all": "npm run clean && npm run build all",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && npm run build:all && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@kiraff/eslint-config": "^0.1.0",
    "@rollup/plugin-alias": "^4.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@types/fs-extra": "^11.0.1",
    "@types/yargs": "^17.0.22",
    "esbuild": "^0.17.6",
    "eslint": "^8.33.0",
    "esno": "^0.16.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.1.2",
    "rollup": "^3.14.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-node-externals": "^5.1.2",
    "typescript": "^4.9.5",
    "yargs": "^17.6.2"
  }
}
